{
  "compilerOptions": {
    "target": "ESNext",                      // Modern JS output
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Browser and modern JS libs
    "allowJs": true,                         // Allow JS files (helpful if migrating)
    "skipLibCheck": true,                    // Skip type checking for node_modules
    "esModuleInterop": true,                 // Interop between ES modules and CommonJS
    "allowSyntheticDefaultImports": true,   // Allow default imports from modules without them
    "strict": true,                          // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",                      // Use ES modules
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,                 // Required for React fast refresh etc.
    "noEmit": true,                          // Don't emit compiled files (handled by bundler)
    "jsx": "react-jsx"                       // Use the new React JSX transform
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
